---
name: Mobile Navigation
description: The Mobile Navigation
variables:
    top:
        - data
        - The Top navigation links
    bottom:
        - data
        - The Bottom Navigation links
    page:
        - object
        - The page object
---

<div data-toggle-name="mobile-menu" class="hidden border-b border-gray-50 md:hidden">
    <div class="px-2 py-3 sm:px-3">
        {% for item in top %}
            {% render "shared/navigation/navs", mobile: true, url: item.link, name: item.name, page_url: page.url %}
        {% endfor %}
    </div>
    <div class="pt-4 pb-3 border-t border-gray-50">
        <div class="px-2 py-3 sm:px-3">
            {% for item in bottom %}
                {% render "shared/navigation/navs", mobile: true, url: item.link, name: item.name, page_url: page.url %}
            {% endfor %}
        </div>
    </div>
    <div class="pt-4 pb-3 border-t border-gray-50">
        <div class="px-2 py-3 sm:px-3">
            <div class="flex-1 flex items-center justify-center lg:ml-6 lg:justify-end">
                <div class="max-w-lg w-full lg:max-w-xs">
                    <label for="search" class="sr-only">Search</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        {% render "bridgetown_quick_search/search", placeholder: "Search", input_class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 sm:text-sm transition duration-150 ease-in-out" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>