---
name: YouTube Card
description: used to display youtube video in a card grid
variables:
    record_id:
        - string
        - Id of the Youtube Video Series
    type:
        - string
        - options are clips or playlist
---

{% assign video = "https://www.youtube.com/embed/" %}
{% assign playlist = "https://www.youtube.com/embed/videoseries?controls=0&amp;list=" %}

{% if type == "playlist" %}
    {% assign link = playlist | append: record_id %}
{% elsif type == "clips" %}
    {% assign link = video | append: record_id %}
{% endif %}

<div class="col-span-1 flex flex-col h-100 text-center bg-white rounded-lg shadow transition-transform duration-300 ease-in-out transform sm:shadow-md md:shadow-lg hover:-translate-y-2 hover:shadow-xl">
    <iframe height="100%" width="100%" src="{{ link }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope;" allowfullscreen></iframe>
</div>