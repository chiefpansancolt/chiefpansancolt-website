---
layout: default
---

<div class="bg-secondary pb-32">
    {% render "shared/navbar", metadata: site.metadata, navigation: site.data.navigation.main, ruby_gems: site.data.navigation.docs.ruby_gems, salesforce: site.data.navigation.docs.salesforce, video: site.data.navigation.video, mobile_top: site.data.navigation.mobile.top, mobile_bottom: site.data.navigation.mobile.bottom, page: page %}
    
    <header class="py-10 text-center">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h1 class="text-3xl leading-9 font-bold text-white">
                {{ page.title }}
            </h1>
            <p class="mt-3 max-w-md mx-auto text-base text-gray-50 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                {{ page.subtitle }}
            </p>
        </div>
    </header>
</div>

<main class="-mt-32">
    {{ content }}
</main>
